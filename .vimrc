" General settings
set nocompatible
set noswapfile
set noerrorbells
set t_Co=256

set ignorecase
set smartcase

filetype plugin indent on
filetype indent on
syntax enable

" Indentation settings
set autoindent
set expandtab
set smartindent
set smarttab
set softtabstop=4
set shiftwidth=4
set incsearch

" A bit of UI
set title
set showcmd
set showmode
set number
set cursorline
set laststatus=2
set colorcolumn=120
set lcs=tab:▸\ ,trail:·,eol:¬,nbsp:_
set list
set ruler

